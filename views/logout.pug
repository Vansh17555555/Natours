doctype html
html
    head
        block head    
            title Natours | #{title} 
            meta(charset='UTF-8')
            meta(name='viewport' content='width=device-width, initial-scale=1.0')
            //-meta(http-equiv='Content-Security-Policy', content="script-src 'self' 'unsafe-inline' cdnjs.cloudflare.com")
            link(href='https://fonts.googleapis.com/css?family=Lato:300,300i,700' rel='stylesheet')

            link(rel='stylesheet' href='/css/style.css')
            link(rel='shortcut icon' type='image/png' href='img/favicon.png')
    body 
        header.header
            nav.nav.nav--tours
                a.nav__el(href='#') All tours
            .header__logo
                img(src='/img/logo-white.png' alt='Natours logo')
            nav.nav.nav--user
                if userlmao
                    a.nav__el.nav__el--logout(href='/logout') log out
                    a.nav__el(href="#")
                        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
                        span= user.name
                else         
                    a.nav__el(href='/login') log in
                    button.nav__el.nav__el--cta Sign up
        block content 
            h1 This is a placeholder heading    
        include _footer
